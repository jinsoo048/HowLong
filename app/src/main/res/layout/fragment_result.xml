<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/mySumLl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="50dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/mySumHeaderTv"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:padding="@dimen/small_padding"
            android:text="@string/my_strength_sum"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />

        <TextView
            android:id="@+id/mySumTv"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:hint="Mine" />

        <RatingBar
            android:id="@+id/mySumRb"
            style="@android:style/Widget.DeviceDefault.RatingBar.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:isIndicator="false"
            android:numStars="10"
            android:padding="@dimen/padding_standard"
            android:rating="3.5"
            android:stepSize="0.5" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:text="(?)" />

        <TextView
            android:id="@+id/myWeakTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="weak" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:text="(!)" />

        <TextView
            android:id="@+id/myStrongTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="strong" />
    </LinearLayout>

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider" />

    <LinearLayout
        android:id="@+id/yourSumLl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/yourSumHeaderTv"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:padding="@dimen/small_padding"
            android:text="@string/your_strength_sum"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />

        <TextView
            android:id="@+id/yourSumTv"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:hint="Yours" />

        <RatingBar
            android:id="@+id/yourSumRb"
            style="@android:style/Widget.DeviceDefault.RatingBar.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:isIndicator="true"
            android:numStars="10"
            android:padding="@dimen/padding_standard"
            android:rating="3.5"
            android:stepSize="0.5" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:text="(?)" />

        <TextView
            android:id="@+id/yourWeakTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="weak" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:text="(!)" />

        <TextView
            android:id="@+id/yourStrongTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="strong" />
    </LinearLayout>

    <View
        android:id="@+id/divider2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider" />

    <LinearLayout
        android:id="@+id/totalSumLl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/totalSumHeaderTv"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:padding="@dimen/small_padding"
            android:text="@string/total_strength_sum"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />

        <TextView
            android:id="@+id/totalSumTv"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:hint="Total" />

        <RatingBar
            android:id="@+id/totalSumRb"
            style="@android:style/Widget.DeviceDefault.RatingBar.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:isIndicator="false"
            android:numStars="10"
            android:padding="@dimen/padding_standard"
            android:rating="3.5"
            android:stepSize="0.5" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:text="(?)" />

        <TextView
            android:id="@+id/bothWeakTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="weak" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:text="(!)" />

        <TextView
            android:id="@+id/bothStrongTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="strong" />
    </LinearLayout>

</LinearLayout>